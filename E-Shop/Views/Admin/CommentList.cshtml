 @using PagedList;
@using PagedList.Mvc;
@model IPagedList<EntityLayer.Entities.Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Icerik</th>
        <th>Ürün Bilgisi</th>
        <th>Kullanıcı</th>
        <th>Tarih</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Icerik</td>
    <td>@item.Product.Name</td>
    <td>@item.User.Name</td>
    <td>@item.Date</td>
    <td>@Html.ActionLink("Sil", "CommentDelete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
</tr>
    }
</table>

@Html.PagedListPager(Model, sayfa => Url.Action("CommentList", new { sayfa }), PagedListRenderOptions.Classic)